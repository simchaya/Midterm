<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Notes</title>
    <!-- Adding bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <h1>My Notes</h1>
    <!-- Form to add a new note -->
    <form action="/notes" method="POST" class="mb-4">
        <!-- Title -->
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" required>
        </div>
        <!-- Content -->
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" name="content" rows="3" required></textarea>
        </div>
        <!-- Category drop down -->
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select class="form-control" id="category" name="category" required>
                <option value="ToDo">ToDo</option>
                <option value="NotesToSelf">Notes To Self</option>
                <option value="Shopping">Shopping</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Add Note</button>
    </form>
    <!-- Display existing notes -->
    <div class="row">
        <% notes.forEach(note=> { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= note.title %>
                        </h5>
                        <p class="card-text">
                            <%= note.content.substring(0, 100) %>...
                        </p>
                        <p class="text-muted"><strong>Category:</strong>
                            <%= note.category %>
                        </p>
                        <a href="/notes/<%= note._id %>" class="btn btn-sm btn-info">View</a>
                        <a href="/notes/<%= note._id %>/edit">Edit</a>  
                        <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                          </form>
                          
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

</body>

</html>